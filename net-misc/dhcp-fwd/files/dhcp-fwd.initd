depend() {
	need net
}

start() {
	ebegin "Starting dhcp-fwd"
	export PIDFILE=${PIDFILE}
	/usr/sbin/dhcp-fwd -c ${CONFIG}
	eend $?
}

stop() {
	ebegin "Stopping dhcp-fwd"
	start-stop-daemon --stop --quiet --pidfile ${PIDFILE}
	eend $?
}
